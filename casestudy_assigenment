 1. Insert Multiple Course Records

package jdbc_demo;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;

public class CourseDataInsert {

    public static void main(String[] args) {
        String url = "jdbc:mysql://localhost:3306/course_db";
        String username = "root";
        String password = "Abhi@89199";

        String[][] courses = {
            {"21", "Java FullStack", "George", "34"},
            {"22", ".Net FullStack", "Robert", "30"},
            {"23", "AI ML", "Elon", "40"},
            {"24", "Cloud Computing", "Charles", "14"},
            {"25", "Python FullStack", "Romeo", "27"}
        };

        try {
            Class.forName("com.mysql.cj.jdbc.Driver");
            Connection conn = DriverManager.getConnection(url, username, password);
            String query = "INSERT INTO courses(course_id, course_name, faculty, credits) VALUES(?, ?, ?, ?)";
            PreparedStatement ps = conn.prepareStatement(query);

            for (String[] c : courses) {
                ps.setInt(1, Integer.parseInt(c[0]));
                ps.setString(2, c[1]);
                ps.setString(3, c[2]);
                ps.setInt(4, Integer.parseInt(c[3]));
                ps.executeUpdate();
            }

            System.out.println("All course records inserted.");
            ps.close();
            conn.close();
        } catch (Exception e) {
            System.out.println("Error: " + e);
        }
    }
}
Output:

All course records inserted.
// View All Courses

package jdbc_demo;

import java.sql.*;

public class CourseDataView {

    public static void main(String[] args) {
        String url = "jdbc:mysql://localhost:3306/course_db";
        String username = "root";
        String password = "Abhi@89199";

        try {
            Class.forName("com.mysql.cj.jdbc.Driver");
            Connection conn = DriverManager.getConnection(url, username, password);
            Statement stmt = conn.createStatement();
            ResultSet rs = stmt.executeQuery("SELECT * FROM courses");

            System.out.println("ID\tName\t\t\tFaculty\t\tCredits");
            System.out.println("------------------------------------------------");

            while (rs.next()) {
                int id = rs.getInt("course_id");
                String name = rs.getString("course_name");
                String faculty = rs.getString("faculty");
                int credits = rs.getInt("credits");

                System.out.println(id + "\t" + name + "\t" + faculty + "\t" + credits);
            }

            stmt.close();
            conn.close();
        } catch (Exception e) {
            System.out.println("Error: " + e);
        }
    }
}

Output:
ID	Name			Faculty		Credits
------------------------------------------------
21	Java FullStack		George		34
22	.Net FullStack		Robert		30
23	AI ML			Elon		40
24	Cloud Computing	Charles		14
25	Python FullStack	Romeo		27

//Update a Course
package jdbc_demo;

import java.sql.*;
import java.sql.Connection; 
import java.sql.DriverManager; 
import java.sql.PreparedStatement;

public class CourseDataUpdate {

    public static void main(String[] args) {
        String url = "jdbc:mysql://localhost:3306/course_db";
        String username = "root";
        String password = "Abhi@89199";

        try {
            Class.forName("com.mysql.cj.jdbc.Driver");
            Connection conn = DriverManager.getConnection(url, username, password);

            String updateQuery = "UPDATE courses SET faculty = ?, credits = ? WHERE course_id = ?";
            PreparedStatement ps = conn.prepareStatement(updateQuery);

            ps.setString(1, "Mellon");
            ps.setInt(2, 40);
            ps.setInt(3, 23);

            int result = ps.executeUpdate();

            if (result > 0)
                System.out.println("Record updated successfully.");
            else
                System.out.println("Course not found.");

            ps.close();
            conn.close();

        } catch (Exception e) {
            System.out.println("Error: " + e);
        }
    }
}

Output:
Record updated successfully.

//Delete a Course
package jdbc_demo;
import java.sql.Connection; 
import java.sql.DriverManager; 
import java.sql.PreparedStatement;


public class CourseDataDelete {

    public static void main(String[] args) {
        String url = "jdbc:mysql://localhost:3306/course_db";
        String username = "root";
        String password = "your_password";

        try {
            Class.forName("com.mysql.cj.jdbc.Driver");
            Connection conn = DriverManager.getConnection(url, username, password);

            String deleteQuery = "DELETE FROM courses WHERE course_id = ?";
            PreparedStatement ps = conn.prepareStatement(deleteQuery);
            ps.setInt(1, 23);

            int result = ps.executeUpdate();

            if (result > 0)
                System.out.println("Course deleted successfully.");
            else
                System.out.println("Course not found.");

            ps.close();
            conn.close();

        } catch (Exception e) {
            System.out.println("Error: " + e);
        }
    }
}
 Output:

Course deleted successfully.
 5. Insert Product
package myapp.jdbc_demo;

import java.sql.*;

public class ProductInsert {

    public static void main(String[] args) {
        String url = "jdbc:mysql://localhost:3306/inventory_db";
        String username = "root";
        String password = "Abhi@89199";

        try {
            Class.forName("com.mysql.cj.jdbc.Driver");
            Connection conn = DriverManager.getConnection(url, username, password);

            String query = "INSERT INTO products(product_id, product_name, quantity, price) VALUES (?, ?, ?, ?)";
            PreparedStatement ps = conn.prepareStatement(query);

            ps.setInt(1, 101);
            ps.setString(2, "Bluetooth Speaker");
            ps.setInt(3, 50);
            ps.setDouble(4, 1499.99);

            int result = ps.executeUpdate();
            System.out.println(result + " product inserted.");

            ps.close();
            conn.close();
        } catch (Exception e) {
            System.out.println("Error: " + e);
        }
    }
}
Output:
1 product inserted.
 View Products

package myapp.jdbc_demo;

import java.sql.*;

public class ProductView {

    public static void main(String[] args) {
        String url = "jdbc:mysql://localhost:3306/inventory_db";
        String username = "root";
        String password = "Abhi@89199";

        try {
            Class.forName("com.mysql.cj.jdbc.Driver");
            Connection conn = DriverManager.getConnection(url, username, password);

            Statement stmt = conn.createStatement();
            ResultSet rs = stmt.executeQuery("SELECT * FROM products");

            System.out.println("ID\tName\t\t\tQty\tPrice");
            System.out.println("-------------------------------------------");

            while (rs.next()) {
                int id = rs.getInt("product_id");
                String name = rs.getString("product_name");
                int quantity = rs.getInt("quantity");
                double price = rs.getDouble("price");

                System.out.println(id + "\t" + name + "\t" + quantity + "\t" + price);
            }

            stmt.close();
            conn.close();
        } catch (Exception e) {
            System.out.println("Error: " + e);
        }
    }
}
Output:
ID	Name			Qty	Price
-------------------------------------------
101	Bluetooth Speaker	50	1499.99

